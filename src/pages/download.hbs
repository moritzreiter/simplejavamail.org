        <script src="https://cdnjs.cloudflare.com/ajax/libs/sprintf/1.1.2/sprintf.min.js"></script>
        <script>
            loadMavenDetails("org.simplejavamail", "simple-java-mail", "mavenDependency", document.getElementById("mavenDependency").innerHTML);

            function loadMavenDetails(groupId, artifactId, displayElementId, displayTemplate) {
                let displayElement = document.getElementById(displayElementId);
                displayElement.innerHTML = sprintf(displayTemplate, groupId, artifactId, "%s");

                fetch(sprintf('https://img.shields.io/maven-central/v/%s/%s.json', groupId, artifactId), { method: 'get' })
                    .then(response => response.json())
                    .then(response => response.value.replace('v', ''))
                    .then((latestVersion) => displayElement.innerHTML = sprintf(displayElement.innerHTML, latestVersion));
            }
        </script>
